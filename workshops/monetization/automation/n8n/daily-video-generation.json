{
  "name": "Daily Video Generation Pipeline",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "hours",
              "hoursInterval": 8
            }
          ]
        }
      },
      "name": "Schedule (3x daily)",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [250, 300]
    },
    {
      "parameters": {
        "command": "cd /home/mark && python3 faceless_video_engine.py --niche=coding"
      },
      "name": "Generate Video",
      "type": "n8n-nodes-base.executeCommand",
      "position": [450, 300]
    },
    {
      "parameters": {
        "path": "/tmp/faceless_videos",
        "fileType": "video/mp4"
      },
      "name": "Find Latest Video",
      "type": "n8n-nodes-base.readBinaryFile",
      "position": [650, 300]
    },
    {
      "parameters": {
        "authentication": "oAuth2",
        "title": "={{$json.metadata.title}}",
        "description": "={{$json.metadata.description}}",
        "categoryId": "28",
        "privacyStatus": "public"
      },
      "name": "Upload to YouTube",
      "type": "n8n-nodes-base.youTube",
      "position": [850, 250]
    },
    {
      "parameters": {
        "authentication": "oAuth2",
        "caption": "={{$json.metadata.description}}",
        "hashtags": "coding,ai,tutorial"
      },
      "name": "Upload to TikTok",
      "type": "n8n-nodes-base.tiktok",
      "position": [850, 350]
    },
    {
      "parameters": {
        "channel": "#revenue",
        "text": "ðŸŽ¬ New video published!\nTitle: {{$json.metadata.title}}\nPlatforms: YouTube Shorts, TikTok\nTime: {{$now.toFormat('HH:mm')}}"
      },
      "name": "Notify Slack",
      "type": "n8n-nodes-base.slack",
      "position": [1050, 300]
    }
  ],
  "connections": {
    "Schedule (3x daily)": {
      "main": [[{"node": "Generate Video", "type": "main", "index": 0}]]
    },
    "Generate Video": {
      "main": [[{"node": "Find Latest Video", "type": "main", "index": 0}]]
    },
    "Find Latest Video": {
      "main": [
        [
          {"node": "Upload to YouTube", "type": "main", "index": 0},
          {"node": "Upload to TikTok", "type": "main", "index": 0}
        ]
      ]
    },
    "Upload to YouTube": {
      "main": [[{"node": "Notify Slack", "type": "main", "index": 0}]]
    },
    "Upload to TikTok": {
      "main": [[{"node": "Notify Slack", "type": "main", "index": 0}]]
    }
  },
  "settings": {},
  "staticData": null,
  "tags": [],
  "pinData": {}
}
