{
  "id": null,
  "uid": "roxy-observability",
  "title": "ROXY Observability",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"],
    "time_options": ["5m", "15m", "1h", "6h", "24h", "7d"]
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "type": "stat",
      "title": "Requests per Endpoint",
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS"
      },
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "requests",
          "mappings": [],
          "thresholds": {"mode": "absolute", "steps": [{"color": "green"}, {"color": "orange", "value": 1000}]}
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {"calcs": ["sum"], "fields": ""},
        "orientation": "auto",
        "textMode": "value"
      },
      "targets": [
        {
          "expr": "sum by (endpoint) (increase(roxy_requests_total[5m]))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Request Latency (95th percentile)",
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS"
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "legend": {"show": true},
        "tooltip": {"mode": "multi"}
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(roxy_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Requests",
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS"
      },
      "gridPos": {"h": 7, "w": 12, "x": 0, "y": 6},
      "fieldConfig": {"defaults": {"unit": "short"}, "overrides": []},
      "options": {"legend": {"show": false}},
      "targets": [
        {
          "expr": "roxy_active_requests",
          "legendFormat": "active",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "RAG Query Latency",
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS"
      },
      "gridPos": {"h": 7, "w": 12, "x": 12, "y": 8},
      "fieldConfig": {"defaults": {"unit": "s"}, "overrides": []},
      "targets": [
        {
          "expr": "rate(roxy_rag_latency_seconds_sum[5m]) / rate(roxy_rag_latency_seconds_count[5m])",
          "legendFormat": "avg",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Cache Hit Ratio",
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS"
      },
      "gridPos": {"h": 7, "w": 12, "x": 0, "y": 13},
      "fieldConfig": {"defaults": {"unit": "percentunit"}},
      "targets": [
        {
          "expr": "rate(roxy_cache_hits_total[5m]) / (rate(roxy_cache_hits_total[5m]) + rate(roxy_cache_misses_total[5m]))",
          "legendFormat": "hit ratio",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Errors by Type",
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS"
      },
      "gridPos": {"h": 7, "w": 12, "x": 12, "y": 13},
      "fieldConfig": {"defaults": {"unit": "ops"}},
      "targets": [
        {
          "expr": "sum by (error_type) (increase(roxy_errors_total[5m]))",
          "legendFormat": "{{error_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Blocked Commands (24h)",
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS"
      },
      "gridPos": {"h": 5, "w": 12, "x": 0, "y": 20},
      "fieldConfig": {"defaults": {"unit": "requests"}},
      "targets": [
        {
          "expr": "sum(increase(roxy_blocked_commands_total[24h]))",
          "legendFormat": "blocked",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Rate Limited Requests (24h)",
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS"
      },
      "gridPos": {"h": 5, "w": 12, "x": 12, "y": 20},
      "fieldConfig": {"defaults": {"unit": "requests"}},
      "targets": [
        {
          "expr": "sum(increase(roxy_rate_limited_total[24h]))",
          "legendFormat": "rate limited",
          "refId": "A"
        }
      ]
    }
  ],
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true
      }
    ]
  }
}
