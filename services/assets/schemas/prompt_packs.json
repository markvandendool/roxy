{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SKYBEAM Prompt Packs Schema",
  "type": "object",
  "required": ["pack_id", "timestamp", "status", "source_briefs", "packs", "meta"],
  "properties": {
    "pack_id": {
      "type": "string",
      "pattern": "^PACK_[0-9]{8}_[0-9]{6}_[a-f0-9]{8}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["healthy", "partial", "degraded"]
    },
    "source_briefs": {
      "type": ["string", "null"]
    },
    "packs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["script_id", "prompts"],
        "properties": {
          "script_id": {"type": "string"},
          "prompts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["asset_id", "asset_type", "prompt", "target_specs"],
              "properties": {
                "asset_id": {"type": "string"},
                "asset_type": {"type": "string"},
                "prompt": {"type": "string"},
                "negative_prompt": {"type": "string"},
                "target_specs": {
                  "type": "object",
                  "properties": {
                    "width": {"type": "integer"},
                    "height": {"type": "integer"},
                    "aspect": {"type": "string"},
                    "fps": {"type": "integer"},
                    "duration": {"type": "number"}
                  }
                },
                "style_tokens": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "safe_text_overlays": {
                  "type": "array",
                  "items": {"type": "string"}
                }
              }
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["version", "service", "story_id", "pack_count", "prompt_count"],
      "properties": {
        "version": {"type": "string"},
        "service": {"type": "string"},
        "story_id": {"type": "string"},
        "pack_count": {"type": "integer"},
        "prompt_count": {"type": "integer"},
        "degraded": {"type": "boolean"}
      }
    }
  }
}
