{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SKYBEAM Asset Briefs Schema",
  "type": "object",
  "required": ["brief_id", "timestamp", "status", "source_review", "briefs", "meta"],
  "properties": {
    "brief_id": {
      "type": "string",
      "pattern": "^BRIEF_[0-9]{8}_[0-9]{6}_[a-f0-9]{8}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["healthy", "partial", "degraded"]
    },
    "source_review": {
      "type": ["string", "null"],
      "description": "Review ID from script reviewer"
    },
    "briefs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["script_id", "title", "format", "duration_target", "visual_style", "required_assets", "scene_map"],
        "properties": {
          "script_id": {"type": "string"},
          "title": {"type": "string"},
          "format": {"type": "string", "enum": ["short", "standard", "long"]},
          "duration_target": {"type": "integer", "description": "Target duration in seconds"},
          "visual_style": {
            "type": "object",
            "properties": {
              "primary_color": {"type": "string"},
              "secondary_color": {"type": "string"},
              "font_family": {"type": "string"},
              "mood": {"type": "string"},
              "lighting": {"type": "string"}
            }
          },
          "required_assets": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["asset_type", "purpose"],
              "properties": {
                "asset_type": {"type": "string", "enum": ["thumbnail", "intro_card", "lower_third", "broll", "end_card", "title_card"]},
                "purpose": {"type": "string"},
                "count": {"type": "integer", "default": 1},
                "specs": {"type": "object"}
              }
            }
          },
          "scene_map": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["scene_id", "t_start", "t_end", "section"],
              "properties": {
                "scene_id": {"type": "string"},
                "t_start": {"type": "number"},
                "t_end": {"type": "number"},
                "section": {"type": "string"},
                "on_screen_text": {"type": "string"},
                "broll_intent": {"type": "string"},
                "vo_summary": {"type": "string"}
              }
            }
          },
          "compliance": {
            "type": "object",
            "properties": {
              "disallowed_words": {"type": "array", "items": {"type": "string"}},
              "music_policy": {"type": "string"},
              "trademark_risks": {"type": "array", "items": {"type": "string"}}
            }
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": ["version", "service", "story_id", "brief_count"],
      "properties": {
        "version": {"type": "string"},
        "service": {"type": "string"},
        "story_id": {"type": "string"},
        "brief_count": {"type": "integer"},
        "degraded": {"type": "boolean"}
      }
    }
  }
}
